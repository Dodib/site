
{% extends 'base.twig' %}



{% block content %}

<h2>Edit Profile: {{user.username}}</h2>

{{ flash.error|raw }} <br />

<form action="" method="POST">
    <input type="hidden" name="token" value="{{sessionid}}">

    <label>Username: </label>
    <input type="text" name="username" value="{{user.username}}" readonly> <br />
    <label>email: </label>
    <input type="text" name="email" value="{{user.email}}"> <br />
    <label>bio: </label>
    <input type="text" name="bio" value="{{user.bio}}"> <br />
    <label>Administrator: </label>
    <input type="checkbox" name="isAdmin" value="true" {% if user.isAdmin  %} checked {% endif %}">

    <input type="submit" name="submit" value="Submit">
</form>
{% endblock %}

